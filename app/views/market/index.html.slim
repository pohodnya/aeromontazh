      .three.fields
        .field
          input type='text' id='first_name' placeholder='Фамилия'
        .field
          input type='text' id='last_name' placeholder='Имя'
        .field
          input type='text' id='third_name' placeholder='Отчество'
      .two.fields
        .field
          input type='text' id='email' placeholder='E-mail'
        .field
          input type='text' id='phone' placeholder='Телефон'
      h4.ui.dividing.header Адрес доставки в г.Новосибирск
      .three.fields
        .field
          input type='text' id='street' placeholder='Улица'
        .field
          input type='text' id='house' placeholder='Дом'
        .field
          input type='text' id='flat' placeholder='Квартира'
  .actions
    .ui.negative.left.labeled.icon.button
      | Отмена
      i.remove.icon
    .ui.positive.left.labeled.icon.button onclick='sendOrder();'
